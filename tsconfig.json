{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      // "@components/*": ["./src/components/*"],
      // "@layouts/*": ["./src/layouts/*"],
      "@public/*": ["./public/*"],
      "@/*": ["./src/*"]
      // "@types/*": ["./src/types/*"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.astro"],
  "exclude": ["node_modules", "dist"]
}
