---
import Typography from '@components/Typography.astro'
interface Props {
	id: string
	label: string
	shortLabel: string
	attribute: Record<string, string>
}
const { id, label, shortLabel, attribute } = Astro.props
---

<article
	{...attribute}
	class:list={[
		'bg-cardslight dark:bg-cardsdark',
		'w-full h-auto',
		'flex flex-col justify-center items-center gap-2 md:gap-5',
		'text-textlight dark:text-textdark border-2 border-primarylight/30 dark:border-primarydark/30',
		'py-4 md:py-8 rounded-lg',
		'aspect-square',
	]}
>
	<Typography as="span" variant="big" color="accent" id={id} />
	<Typography
		as="span"
		variant="medium"
		color="text"
		class="font-bold uppercase hidden md:block"
	>
		{label}
	</Typography>
	<Typography
		as="span"
		variant="medium"
		color="text"
		class="font-bold uppercase md:hidden"
	>
		{shortLabel}
	</Typography>
</article>
